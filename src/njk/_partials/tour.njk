<div class="table-responsive">
  <table class="table table-hover">
     <thead>
      <tr>
        <th>Date</th>
        <th>City</th>
        <th>Venue</th>
      </tr>
    </thead>
    {% for tourdate in tour.tourdates %}
    <tbody>
      <tr>
        <td>{{ tourdate.date }}</td>
        <td>{{ tourdate.city }}</td>
        <td>{{ tourdate.venue }}</td>
      </tr>
    </tbody>
    {% endfor %}
  </table>
</div>
